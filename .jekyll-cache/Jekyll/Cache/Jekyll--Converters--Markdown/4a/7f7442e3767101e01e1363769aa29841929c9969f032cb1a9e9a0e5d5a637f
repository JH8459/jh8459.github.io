const binarySearch = function (arr, target) {
  // ì´ì§„íƒìƒ‰ (binary search)ì€ íƒìƒ‰ë²”ìœ„ì˜ ì ˆë°˜ì„ ê¸°ì¤€ìœ¼ë¡œ 
  // targetê³¼ í™•ì¸í•œ í›„ ê·¸ ì ˆë°˜ê°’ë³´ë‹¤ í° ê³³ ë˜ëŠ” ì‘ì€ ê³³ì„ ë‹¤ìŒ íƒìƒ‰ë²”ìœ„ë¡œ ì¡ì•„ê°€ëŠ” íƒìƒ‰ë°©ë²•
  if(!arr.includes(target)) { return -1; } // targetì´ arrë°°ì—´ì— ì—†ë‹¤ë©´ -1 ë¦¬í„´</p>
  </li>
</ol>

<p>const idxCenter = Math.floor(arr.length/2); // ì¤‘ê°„ ì¸ë±ìŠ¤ ì„¤ì •</p>

<p>if(arr[idxCenter]===target) { return idxCenter; } // arr[ì¤‘ê°„ì¸ë±ìŠ¤] === targetê³¼ ê°™ë‹¤ë©´, rootNode ê°€ íƒ€ê²Ÿì¸ ê²½ìš°ì´ë‹¤.</p>

<p>const recArr = arr[idxCenter] &gt; target ? // arr[ì¤‘ê°„ì¸ë±ìŠ¤] &gt; targetì´ í¬ë‹¤ë©´ rootì˜ ì¢Œì¸¡ìœ¼ë¡œ íƒìƒ‰ì´ ì§„í–‰ë˜ì•¼í•¨
    arr.slice(0,idxCenter) : // recArr = ì¤‘ê°„ì¸ë±ìŠ¤ ê¸°ì¤€, ì¢Œì¸¡ slice
    arr.slice(idxCenter+1); // recArr = ì¤‘ê°„ì¸ë±ìŠ¤ ê¸°ì¤€, ìš°ì¸¡ slice</p>

<p>return binarySearch(recArr,target);  // ì¬ê·€ í˜¸ì¶œ
};</p>
<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>### Reference Code
---
```javascript
const binarySearch = function (arr, target) {
  let left = 0,
    right = arr.length - 1;
  while (left &lt;= right) {
    let middle = parseInt((right + left) / 2);
    if (arr[middle] === target) {
      return middle;
    }
    if (target &lt; arr[middle]) {
      right = middle - 1;
    } else {
      left = middle + 1;
    }
  }
  return -1;
};
</code></pre></div></div>
